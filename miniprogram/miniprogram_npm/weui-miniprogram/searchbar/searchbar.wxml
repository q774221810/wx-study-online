<view class="courseview" wx:if="{{searchState && result.length > 0}}">
	<view style="margin-top:40rpx" wx:for="{{result}}" wx:key="index" wx:for-item="course" >
		<view class="course">
			<image src="/page/swiperimg/electric.jpg" class="sortimg"></image>
			<view class="coursedetail">
				<view class="name">{{course.name}}</view>
				<view class="school">{{course.school}}</view>
				<view class="number"><text style="margin-left:50rpx;">{{course.number}}</text>
					<view class="time">{{course.time}}学时</view>
				</view>
			</view>
		</view>
		<view class="line"></view>
	</view>
</view>