  background-image: url("data:image/svg+xml,%3Csvg t='1587792290167' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='16701' width='200' height='200'%3E%3Cpath d='M127.798537 554.046075l85.334442 0 0-85.343652-85.334442 0L127.798537 554.046075zM127.798537 724.76817l85.334442 0 0-85.334442-85.334442 0L127.798537 724.76817zM127.798537 383.367981l85.334442 0 0-85.334442-85.334442 0L127.798537 383.367981zM298.521656 554.046075l597.45775 0 0-85.343652-597.45775 0L298.521656 554.046075zM298.521656 724.76817l597.45775 0 0-85.334442-597.45775 0L298.521656 724.76817zM298.521656 383.367981l597.45775 0 0-85.334442-597.45775 0L298.521656 383.367981z' p-id='16702' fill='%236b74f7'%3E%3C/path%3E%3C/svg%3E");
  background-size: cover;
  height: 70rpx;
  width: 70rpx;
  position: relative;
}

.moredetail {
  position: absolute;
}

.triangle {
  width: 0;
  height: 0;
  border-left: 25rpx solid transparent;
  border-right: 25rpx solid transparent;
  border-bottom: 50rpx solid white;
}

.sort {
  font-size: 30rpx;
  width: 250rpx;
  left: -150rpx;
}

.mycourse {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}

.mycoursetitle {
  font-size: 38rpx;
  border-left: 5px #6b74f7 solid;
  padding-left: 5px;
  font-weight: bold;
}

.course {
  display: flex;
  height: 200rpx;
  align-items: center;
}

.coursedetail {
  display: flex;
  flex-direction: column;
  width: 440rpx;
  margin-right: 20rpx;
  height: 150rpx;
  position: relative;
}

.coursename {
  width: 100%;
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.school {
  font-size: 30rpx;
  color: #666;
}

.courseprogress {
  position: absolute;
  bottom: 0;
  font-size: 28rpx;
  color: #aeaeae;
  width: 100%;
}

.progressnumber {
  position: absolute;
  right: 0;
  bottom: 8px;
}

.courseimage {
  border-radius: 15rpx;
  height: 147rpx;
  width: 250rpx;
}

.unlogin {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

