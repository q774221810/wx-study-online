/* miniprogram/pages/mycourse/mycourse.wxss */
.title {
  color: rgb(230, 230, 230);
  background-color: #6b74f7;
  padding-left: 10px;
  text-align: center;
}

.container {
  margin: 0 10rpx 0 10rpx;
  width: 730rpx;
  height: 365rpx;
}

.ecan {
  width: 100%;
  height: 100%;
}

.studydetail {
  background-color: white;
  border-radius: 10rpx;
  margin: 0 75rpx 0 75rpx;
  box-shadow: 1px 1px 1px 1px rgb(172, 172, 172);
  /* border:#aeaeae 1px solid ; */
  position: absolute;
  top: 0;
}

.itemView {
  display: flex;
  
  justify-content: center;
  border-radius: 10rpx;
}

.ditem {
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  font-size: 30rpx;

}

.dbottom {
  text-align: center;
}
.dbottom navigator{
  position: absolute;
  right: 2px;
  bottom: 1px;
  font-size: 12px;
  color: #bfbfbf;
}

.item {
  margin-top: 30rpx;
}

.value {
  margin-top: 15rpx;
  color: #aeaeae;
}

.value text {
  font-size: 60rpx;
  color: black;
}

.line {
  background-color: rgb(167, 167, 167);
  width: 2rpx;
  margin: 40rpx 0 40rpx 0;
  height: 120rpx;
}

.signdetail {
  padding-top: 150rpx;
}

.signbar {
  padding-top: 120rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx 0 20rpx;
}

.signtitle {
  font-size: 50rpx;
  font-weight: bold;
}

